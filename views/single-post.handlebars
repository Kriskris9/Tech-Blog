
<div class="single-blogPost">
        <h2 class="blogPost-title">{{post.title}}</h2>
        <p class="blogPost-date">{{format_date post.date_created}}</p>
        <p class="blogPost-content">{{post.content}}</p>
        <p class="blogPost-author">{{post.user.username}}</p>
    </div>
    <div class="blogPost-comments">
        <h2 class="blogPost-comments-title">Comments</h2>
        {{#each post.comments as |comment|}}
        <div class="blogPost-comment">
            <p>{{comment.comment}}</p>
            <p class="blogPost-comment-author">{{comment.user.username}}</p>
            <p class="blogPost-comment-date">{{format_date comment.date_created}}</p>
        </div>
        {{/each}}
    </div>

    <div class="blogPost-comment-form">
        <h2>Leave A Comment</h2>
        {{!-- <form method="POST" action="/api/posts/edit/{{post.id}}" class="new-comment-form"> --}}
            <textarea name="comment" id="comment" cols="30" rows="10"></textarea>
        
            <input id="postId" type="hidden" name="post_id" value="{{post.id}}">
            <input id="userId" type="hidden" name="user_id" value="{{post.user_id}}">


            <button type="submit">Add Comment</button>
        </form>
    </div>



</div>



